<UserControl x:Class="Demo.Views.InvoiceAddressBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignWidth="250" Height="164">
    <Grid>
        <Rectangle Fill="#FFF4F4F5"
                   Height="130" Stroke="Black" StrokeThickness="2" VerticalAlignment="Top"
                   Margin="0,17"
                   Width="250" RadiusX="5" RadiusY="5"/>
        <Label Name="TitleLabel" Background="#FFF4F4F5" HorizontalAlignment="Center" VerticalAlignment="Top"
               Height="Auto" Width="Auto" FontSize="18"/>
        <Label Name="ABName" FontSize="16" Margin="10,25"/>
        <Label Name="ABAddress" FontSize="14" Margin="10,50"/>
        <Label Name="ABCity" FontSize="14" Margin="10,75"/>
        <Label Name="ABPostalCode" FontSize="14" Margin="100,75,0,0"/>
        <Label Name="ABCountry" FontSize="14" Margin="10,100"/>
    </Grid>
</UserControl>
